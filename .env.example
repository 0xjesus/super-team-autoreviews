# =============================================================================
# SUPERTEAM EARN AUTO-REVIEW SYSTEM - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# PostgreSQL (Neon) - For standalone demo
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require"

# MySQL - For earn-service integration (see docs/EARN_INTEGRATION.md)
# DATABASE_URL="mysql://user:password@host:3306/earn_db"

# -----------------------------------------------------------------------------
# AI PROVIDERS (at least one required)
# -----------------------------------------------------------------------------

# OpenAI - Direct API access
OPENAI_API_KEY="sk-..."

# Google Gemini - Direct API access
GEMINI_API_KEY="AIza..."
# Alternative: GOOGLE_GENERATIVE_AI_API_KEY="AIza..."

# OpenRouter - RECOMMENDED for earn-agent integration
# Provides access to Claude, Llama, Mistral, DeepSeek, and more
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-v1-..."

# Optional: Override default model
# Options: gpt-4o, gemini-2.0-flash, anthropic/claude-3.5-sonnet, deepseek/deepseek-coder
# AI_MODEL="gemini-2.0-flash"

# -----------------------------------------------------------------------------
# QUEUE SYSTEM
# -----------------------------------------------------------------------------

# Inngest (Default) - For Vercel/serverless deployment
INNGEST_EVENT_KEY="your-event-key"
INNGEST_SIGNING_KEY="your-signing-key"

# BullMQ/Redis - For earn-agent/Railway deployment
# Set USE_BULLMQ=true to use BullMQ instead of Inngest
# REDIS_URL="redis://default:password@containers-us-west-1.railway.app:6379"
# USE_BULLMQ="true"

# -----------------------------------------------------------------------------
# GITHUB
# -----------------------------------------------------------------------------
# Personal Access Token with repo read access
GITHUB_TOKEN="ghp_..."

# -----------------------------------------------------------------------------
# EARN SERVICE INTEGRATION
# -----------------------------------------------------------------------------
# Callback URL for notifying earn-service when reviews complete
# EARN_SERVICE_CALLBACK_URL="https://earn.superteam.fun/api/internal/github-review-complete"
# EARN_SERVICE_API_KEY="your-api-key"

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Feature flags
USE_MOCKS="false"
LOG_LEVEL="info"

# Skip accuracy tests in CI (no API keys)
# SKIP_ACCURACY_TESTS="true"
